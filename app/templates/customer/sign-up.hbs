{{page-title "Sign up"}}

<div class="row">
  <main id="sign-up-form" class="col mx-auto">
    <h3>Sign up</h3>
    <p id="alert-collapse" class="alert alert-danger collapse" role="alert"></p>
    <form {{ on "submit" this.submit }} class="mt-3 mb-4">
      <label for="email" hidden>Email</label>
      <Input @type="email" id="email" class="form-control mb-2 rounded-0" placeholder="Email" @value={{this.email}} />
      <label for="username" hidden>Username</label>
      <Input @type="text" id="username" class="form-control mb-2 rounded-0" placeholder="Username"
        @value={{this.username}} />
      <label for="password" hidden>Password</label>
      <Input @type="password" id="password" class="form-control mb-2 rounded-0" placeholder="Password"
        @value={{this.password}} />
      <label for="confirm-password" hidden>Confirm password</label>
      <Input @type="password" id="confirm-password" class="form-control mb-2 rounded-0" placeholder="Confirm password"
        @value={{this.confirm}} />
      <button type="submit" class="btn btn-primary">Sign up</button>
    </form>
  </main>
</div>
