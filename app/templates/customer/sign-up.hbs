{{page-title "Sign up"}}

<main class="container" id="sign-up-form">
    <div class="row">
        <div class="col mx-auto">
            <h3>Sign up</h3>
            <p id="alert-collapse" class="alert alert-danger collapse" role="alert"></p>
            <form {{ on "submit" this.submit }} class="mt-3 mb-4">
                <Input @type="email" class="form-control mb-2 rounded-0" placeholder="Email" @value={{this.email}} />
                <Input @type="text" class="form-control mb-2 rounded-0" placeholder="Username" @value={{this.username}} />
                <Input @type="password" class="form-control mb-2 rounded-0" placeholder="Password" @value={{this.password}} />
                <Input @type="password" class="form-control mb-2 rounded-0" placeholder="Confirm password" @value={{this.confirm}} />
                <button type="submit" class="btn btn-primary">Sign up</button>
            </form>
        </div>
    </div>
</main>
