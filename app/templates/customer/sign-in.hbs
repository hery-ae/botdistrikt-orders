{{page-title "Sign in"}}

<div class="row">
  <main id="sign-in-form" class="col mx-auto">
    <h3>Sign in</h3>
    <p id="alert-collapse" class="alert alert-danger collapse" role="alert">
      Login failed!
    </p>
    <form {{on "submit" this.submit}} class="mt-3 mb-4">
      <label for="username" hidden>Username</label>
      <Input @type="text" id="username" class="form-control mb-2 rounded-0" placeholder="Username"
        @value={{this.username}} />
      <label for="password" hidden>Password</label>
      <Input @type="password" id="password" class="form-control mb-2 rounded-0" placeholder="Password"
        @value={{this.password}} />
      <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
    <p>New here? <LinkTo @route="customer.sign-up" class="link-primary">Sign up</LinkTo>
    </p>
  </main>
</div>
