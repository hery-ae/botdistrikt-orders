{{page-title "Sign in"}}

<div id="sign-in-form" class="col mx-auto">
  <h3>Sign in</h3>
  <p id="alert-collapse" class="alert alert-danger collapse" role="alert">
    Login failed!
  </p>
  <CustomerForm class="mt-3 mb-4" @context={{this}} @action="signIn" @fields={{array (hash type="text" id="username"
    text="Username" ) (hash type="password" id="password" text="Password" ) }}>
    Sign in
  </CustomerForm>
  <p>New here? <LinkTo @route="customer.sign-up" class="link-primary">Sign up</LinkTo>
  </p>
</div>