{{page-title "Sign in"}}

<main class="container" id="sign-in-form">
  <div class="row">
    <div class="col mx-auto">
        <h3>Sign in</h3>
        <p id="alert-collapse" class="alert alert-danger collapse" role="alert">
            Login failed!
        </p>
        <form {{ on "submit" this.submit }} class="mt-3 mb-4">
            <Input @type="text" class="form-control mb-2 rounded-0" placeholder="Username" @value={{this.username}} />
            <Input @type="password" class="form-control mb-2 rounded-0" placeholder="Password" @value={{this.password}} />
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
        <p>New here? <LinkTo @route="customer.sign-up" class="link-primary">Sign up</LinkTo></p>
    </div>
  </div>
</main>
