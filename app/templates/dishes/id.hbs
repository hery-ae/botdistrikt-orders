{{page-title @model.name}}

<div class="row">
  <div class="col-12 col-md-7">
    <div class="card" id="dish-detail">
      <img src="{{concat @model.image_base_url @model.image_file_name}}" class="card-img-top"
        alt="{{@model.image_file_name}}">
      <div class="card-body">
        <h4 class="card-title pb-1">{{@model.name}}</h4>
        <p class="card-text pb-2">{{local-string @model.price}}</p>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-5">
    <div class="card" id="order-form">
      <div class="card-body">
        <h4 class="card-title mb-3">Order Form</h4>
        <form {{on "submit" (fn this.order @model)}}>
          <div class="form-group row">
            <label for="name" class="col-5 col-form-label">Order name</label>
            <div class="col-7">
              <Input @type="text" id="name" class="form-control-plaintext" @value={{@model.name}} readonly />
            </div>
          </div>
          <div class="form-group row">
            <label for="qty" class="col-5 col-form-label">Quantity</label>
            <div class="col-7">
              <Input @type="number" id="qty" class="form-control" @value={{this.qty}} required />
            </div>
          </div>
          <button type="submit" class="btn btn-primary my-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>